extends layout

block content
	.row-fluid
		.span8.offset2.well
			each val, key in user
				if key != '_id' && key != 'password'
					if key == 'email'
						.row-fluid
							.span3 <b>!{capitalize(key)}: </b>
							.span6
								a(href='mailto:#{val}') !{val}
					else if key == 'user_since'
						.row-fluid
							.span3 <b>User since: </b>
							.span6 !{val}
					else
						.row-fluid
							.span3 <b>!{capitalize(key)}: </b>
							.span6 !{val}
		